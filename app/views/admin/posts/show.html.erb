<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="card mb-4">
        <div class="card-body">
          <% if @post.get_image.attached? %>
            <%= image_tag @post.get_image, alt: @post.title, class: "img-fluid mb-3", style: "width: 100%; max-height: 400px;" %>
          <% end %>
          <p><strong>投稿者:</strong> <%= @post.user.name %></p>
          <p><strong>投稿日時:</strong> <%= @post.created_at.strftime("%Y-%m-%d %H:%M") %></p>
          <p><strong>季節:</strong> <%= @post.season %></p>
          <h1><%= @post.title %></h1>
          <p><strong>メイン野菜:</strong> <%= @post.main_vegetable %></p>
          <p><strong>説明:</strong> <%= @post.description %></p>
          
          <p> <!--有効数のみカウント-->
            <span><%= active_likes_count(@post) %> <i class="fas fa-heart" style="color: red; margin-left: 5px;"></i></span>
            <span style="margin-left: 15px;"><%= active_bookmarks_count(@post) %><i class="fa-solid fa-bookmark" style="color: #6495ED; margin-left: 5px;"></i></span>
            <span style="margin-left: 15px;">
              <%= link_to "#comments-section" do %> <!--コメント部分にスクロール-->
               <%= active_comments_count(@post) %><i class="fa-solid fa-comment" style="color: #FFA500; margin-left: 5px;"></i>
              <% end %>
            </span>
            <span class="badge <%= @post.is_public ? 'badge-success' : 'badge-danger' %> ml-5" style="font-size: 18px; paddint: 10px;">
               <%= @post.is_public ? '公開中' : '非公開' %>
            </span>
          </p>
        </div>
      </div>
       <div class="card mb-4">
        <div class="card-header">
          食材
        </div>
        <div class="card-body">
          <% @post.ingredients.each do |ingredient| %>
            <p><strong>食材名:</strong> <%= ingredient.name %><strong> 分量:</strong> <%= ingredient.amount %></p>
          <% end %>
        </div>
      </div>
     
      <!--それぞれの手順を別々のカードで表示する-->
      <div class="card-body">
        <% @post.recipe_steps.each_with_index do |recipe_step, index| %>
          <div class="card mb-2">
            <div class="card-header">
              <strong>手順 <%= index + 1 %></strong>
            </div>
            <div class="card-body">
              <p><%= recipe_step.instructions %></p>
            </div>
          </div>
        <% end %>
      </div>

         <!--コメント管理-->
      <div id="comments-section">
       <% @post.comments.each do |comment| %>
        <%= render partial: 'admin/comments/comment_moderation', locals: { comment: comment } %>
       <% end %>
      </div>
      <!-- 管理者用の操作パネル -->
        <div class="admin-controls">
         <div class="col-8 mx-auto">
          <div class="row g-2">
            <div class="col">
              <%= link_to '投稿一覧', admin_posts_path, class: 'btn btn-primary w-100 btn-lg' %>
            </div>
            <div class="col">
              <%= link_to '投稿を削除', admin_post_path(@post), method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'btn btn-danger w-100 btn-lg' %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

