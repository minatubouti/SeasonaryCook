<div class="container">
  <div class="row">
    <div class="col-md-4">
      <h3><%= image_tag @user.icon_image, class: 'img-fluid profile-icon' if @user.icon_image.attached? %> <%= @user.name %></h3>
       
        <div class="d-inline-block mr-4">
          <i class="fas fa-heart" style="color: red;"><span style="margin-left: 5px;"><%= @likes_count %></span></i>
        </div>
     
        <div class="d-inline-block mr-4">
          <i class="fa-solid fa-bookmark" style="color: #6495ED;"><span style="margin-left: 5px;"><%= @bookmarks_count %></span></i>
        </div>
       
        <div class="d-inline-block mr-4">
          <i class="fas fa-comment" style="color: #FFA500;"><span style="margin-left: 5px;"><%= @comments_count %></span></i>
        </div>
        <span class="badge <%= @user.is_deleted? ? 'badge-danger' : 'badge-success' %>">
          <%= @user.is_deleted? ? '退会' : '有効' %>
        </span>
        
        <p class="profile-link"><i class="fas fa-user-friends mt-4"></i>フォロー<%= @user.following.count %></p>
        <p class="profile-link"><i class="fas fa-users"></i>フォロワー<%= @user.followers.count %></p>
        <p><%= @user.profile %></p>
        <%= link_to 'ユーザー編集', edit_admin_user_path(@user), class: 'btn btn-success mb-5' %>
    </div>
    
    <!--投稿アイテム-->
    <div class="col-lg-8 col-md-6 col-sm-12">
      <h3>投稿レシピ</h3>
      <p><strong class="col-3">投稿数</strong> <%= @user.posts.count %></p>
      <div class="row">
        <% @posts.each do |post| %>
          <div class="col-md-4 mb-4"> 
            <div class="card h-100">
              <%= link_to admin_post_path(post) do %>
                <%= image_tag post.get_image, alt: post.title, class: "card-img-top", style: "height: 120px; object-fit: cover;" if post.get_image.attached? %>
              <% end %>
              <div class="card-body">
                <h5 class="card-title"><%= link_to post.title, admin_post_path(post), class: 'item-link' %></h5>
                <div class="d-flex justify-content-between">
                  <p class="mb-0"><%= post.likes.count %> <i class="fas fa-heart" style="color: red;"></i></p>
                  <p class="mb-0"><%= post.bookmarks.count %> <i class="fa-solid fa-bookmark" style="color: #6495ED;"></i></p>
                  <p class="mb-0"><%= post.comments.count %> <i class="fas fa-comment" style="color: #FFA500;"></i></p>
                  <!--投稿が公開中かつユーザーが退会していないかつゲストユーザーではない場合にのみtrue(公開中)となる-->
                  <span class="badge <%= (post.is_public && !post.user.is_deleted && !post.user.guest?) ? 'badge-success' : 'badge-danger' %> ml-1">
                   <!--上記の条件が true ならば、バッジに badge-success クラスが適用され公開中となり、条件が false の場合は、badge-danger クラスが適用され、非公開となる-->
                    <%= (post.is_public && !post.user.is_deleted && !post.user.guest?) ? '公開中' : '非公開' %>
                  </span>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
