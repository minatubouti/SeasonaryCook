<h1>ユーザー一覧</h1>

<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>アイコン</th>
      <th>名前</th>
      <th>登録日</th>
      <th>退会フラグ</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= image_tag user.icon_image, size: "50x50" if user.icon_image.attached? %></td>
        <td><%= user.name %></td>
        <td><%= user.created_at.strftime('%Y-%m-%d') %></td>
        <td><%= user.is_deleted? ? '退会済み' : '有効' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
