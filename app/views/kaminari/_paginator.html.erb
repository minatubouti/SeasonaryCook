<%# The container tag
  - available local variables
    current_page:  a page object for the currently displayed page
    total_pages:   total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
    paginator:     the paginator that renders the pagination tags inside
-%>

<%= paginator.render do -%>
  <div class="pager">
    <ul class="pagination">
      <li class="pre"><%= first_page_tag { raw('<span>&laquo;</span>') } unless current_page.first? %></li>
      <% each_page do |page| -%>
        <% if page.display_tag? -%>
          <li><%= page_tag(page) { raw('<span>' + page.to_s + '</span>') } %></li>
        <% elsif !page.was_truncated? -%>
          <%= gap_tag %>
        <% end -%>
      <% end -%>
      <li class="next"><%= last_page_tag { raw('<span>&raquo;</span>') } unless current_page.last? %></li>
    </ul>
  </div>
<% end -%>
