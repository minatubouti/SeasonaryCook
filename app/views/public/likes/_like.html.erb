<% if post.likes_by?(current_user) %>
  <% like = post.likes.find_by(user_id: current_user.id) %>
  <%= link_to post_like_path(post, like), method: :delete, remote: true do %>
    <i class="fas fa-heart" aria-hidden="true" style="color: red;">
    <%= post.likes.count %>いいね</i>
  <% end %>
<% else %>
  <%= link_to post_likes_path(post), method: :post, remote: true do %>
    <i class="fa-regular fa-heart" aria-hidden="true">
    <%= post.likes.count %>いいね</i>
  <% end %>
<% end %>
