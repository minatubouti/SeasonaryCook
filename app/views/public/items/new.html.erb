<h1>商品登録</h1>

<%= form_with(model: [ @shop, @item ], url: user_shop_items_path(user_id: @shop.user_id, shop_id: @shop.id), local: true) do |form| %>

  <div class="form-group">
    <%= form.label :name, "商品名" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :description, "商品説明" %>
    <%= form.text_area :description, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :price, "商品価格" %>
    <%= form.number_field :price, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :stock_quantity, "在庫数" %>
    <%= form.number_field :stock_quantity, class: "form-control" %>
  </div>
  <%= form.submit "出品する", class: "btn btn-primary" %>
<% end %>