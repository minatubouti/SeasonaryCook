<%= form_with url: tags_path, method: :get, class: 'search-form' do %>
  <%= text_field_tag :search, params[:search], placeholder: "タグを検索" %>
  <%= submit_tag "検索", class: "btn btn-primary" %>
<% end %>

<% if @tags.any? %>
  <% @tags.each do |tag| %>
    <%= link_to tag.name, tag_path(tag), class: 'tag' %> 
  <% end %>
<% else %>
  <p>該当するタグはありません。</p>
<% end %>
