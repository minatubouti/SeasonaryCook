<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-7">
      <%= form_with model: @shop, url: user_shop_path(current_user, @shop), method: :patch, local: true, class: "border p-4 rounded shadow" do |f| %>
      
        <%= render partial: 'shop_form', locals: {f: f } %>

        <div class="form-group text-center">
          <%= f.submit "ショップ情報更新", class: "btn btn-success" %>
        </div>

      <% end %>
    </div>
  </div>
</div>
