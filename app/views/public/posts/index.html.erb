<!--検索、並び替え部分テンプレート-->
<%= render partial: 'search_and_sort', locals: { posts_path_variable: posts_path } %> 

<h1 class="ml-4 mb-5">投稿一覧</h1>
  <div class="row justify-content-center">
    <% @posts.each do |post| %>
    <!--退会しているユーザーの投稿は表示されない-->
      <% unless post.user.is_deleted %> 
     <!--投稿アイテム-->
      <%= render partial: 'public/posts/post_item', locals: {post: post} %>
      <% end %>
    <% end %>
  </div>
  <!--# ページネーション自体の幅を小さくして中央寄せ-->
   <div style="width: 30%; margin: 0 auto;"> 
    <%= paginate @posts %>
   </div>

