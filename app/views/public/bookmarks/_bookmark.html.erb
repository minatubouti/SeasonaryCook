<% if post.bookmarked_by?(current_user) %>
  <% bookmark = post.bookmarks.find_by(user_id: current_user.id) %>
  <%= link_to post_bookmark_path(post, bookmark), method: :delete, remote: true do %>
    <i class="fa-solid fa-bookmark" aria-hidden="true" style="color: #00BFFF;"></i>
    <%= post.bookmarks.count %> ブックマーク
  <% end %>
<% else %>
  <%= link_to post_bookmarks_path(post), method: :post, remote: true do %>
    <i class="fa-regular fa-bookmark" aria-hidden="true"></i>
    <%= post.bookmarks.count %> ブックマーク
  <% end %>
<% end %>
