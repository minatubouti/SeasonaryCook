<div class="container">
  <div class="row no-gutters">
    <div class="col-md-8 col-sm-10 mx-2 mx-sm-auto text-center shadow-lg rounded px-0 my-5">
      <h5 class="text-dark py-4 mb-0" style="background-color: #E6FFE9;">ユーザー新規登録</h5>
      <div class="form-body p-4">

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "public/shared/error_messages", resource: resource %>

          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="fas fa-user"></i></span>
            </div>
            <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'form-control', placeholder: '名前（ニックネーム）', required: true %>
          </div>

          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="fas fa-envelope"></i></span>
            </div>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: 'メールアドレス', required: true %>
          </div>

          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="fas fa-lock"></i></span>
            </div>
            <!--@minimum_password_length が存在する場合には最小文字数をプレースホルダーに含め、存在しない場合には単に "パスワード" と表示します。-->
            <%= f.password_field :password, autocomplete: "new-password", class: 'form-control', placeholder: @minimum_password_length ? "パスワード（#{@minimum_password_length}文字以上）" : "パスワード", required: true %>
          </div>

          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="fas fa-lock"></i></span>
            </div>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', placeholder: 'パスワード（確認）', required: true %>
          </div>

          <div class="form-group">
            <%= f.submit "新規登録", class: 'btn btn-lg btn-block btn-success mt-5' %>
          </div>

          <div class="text-center mt-3">
            <%= link_to "登録済みの方はこちら", new_session_path(resource_name), class: 'btn btn-outline-info' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
